<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC 
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
	
<tiles-definitions>
	<!-- tiles레이아웃을 적용하지 않을 경우의 화면(login Ok 전에 보여줄 화면) -->
	<definition name="layoutNo" template="/WEB-INF/views/layout/loginLayout.jsp"></definition>	
	<definition name="member/*" extends="layoutNo"><!-- 레이아웃 저장 안하는 애들은 저 폴더에 -->
		<put-attribute name="body" value="/WEB-INF/views/member/{1}.jsp"></put-attribute><!-- 윗줄 * 의 위치 -->
	</definition>
	
	<!-- tiles레이아웃을 적용할 경우의 화면(login Ok 후에 보여줄 화면) -->
	<definition name="layoutYes" template="/WEB-INF/views/layout/baseLayout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/layout/header.jsp"/>
		<put-attribute name="nav" value="/WEB-INF/views/layout/nav.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp"/>
	
	</definition>
	<definition name="*/*" extends="layoutYes"><!-- */* : 위의 member/*를 제외한 나머지 -->
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
	</definition>
	<definition name="*/*/*" extends="layoutYes">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp"/>
	</definition>
</tiles-definitions>
